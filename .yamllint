---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  colons:
    max-spaces-after: -1
    level: error
  commas:
    max-spaces-after: -1
    level: error
  comments:
    require-starting-space: false
  empty-lines:
    max: 3
  indentation:
    spaces: 2
    indent-sequences: consistent
  key-duplicates: enable
  line-length:
    max: 120
    level: warning
  new-line-at-end-of-file: enable
  trailing-spaces: disable
  truthy:
    level: warning
